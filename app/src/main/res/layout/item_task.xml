<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:background="@drawable/rounded_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:background="@null"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/textcolor"
        android:fontFamily="@font/amsipro_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/label_duedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/due_date"
        android:background="@android:color/transparent"
        android:fontFamily="@font/amsipro_regular"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/label_dayleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Days left"
        android:background="@android:color/transparent"
        android:fontFamily="@font/amsipro_regular"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/view" />


    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:fontFamily="@font/amsipro_bold"
        android:layout_marginTop="10dp"
        android:text="@string/april_23_2023"
        android:textColor="@color/textcolor"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/label_duedate"
        app:layout_constraintTop_toBottomOf="@+id/label_duedate" />


    <TextView
        android:id="@+id/days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:fontFamily="@font/amsipro_bold"
        android:layout_marginTop="10dp"
        android:text="@string/_12"
        android:textColor="@color/textcolor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/label_dayleft"
        app:layout_constraintTop_toBottomOf="@+id/label_dayleft" />

</androidx.constraintlayout.widget.ConstraintLayout>